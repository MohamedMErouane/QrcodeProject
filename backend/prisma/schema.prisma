generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
  role  String
  class String?

  // Relations
  attendance Attendance[]
}

model Session {
  id          Int          @id @default(autoincrement())
  sessionDate DateTime
  topic       String

  // Relations
  attendance Attendance[]
}

model Attendance {
  id         Int      @id @default(autoincrement())
  status     Boolean  @default(false)
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  session    Session  @relation(fields: [sessionId], references: [id])
  sessionId  Int

  @@unique([userId, sessionId]) // Prevent duplicate attendance entries for the same session
}
